<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<meta title="BareboneHaxe" package="com.ngawung.barebonehaxe" version="1.0.0" company="Ngawung" />
	<app main="Main" path="Export" file="BareboneHaxe" swf-version="32" />

	<!-- ============== -->

	<window width="800" height="480" orientation="landscape" background="0x666666" fps="60" />
	<window depth-buffer="true" stencil-buffer="true" />

	<!-- <window resizable="false" unless="mobile || console" /> -->

	<window if="html5" resizable="false" />
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" />
	<window if="android" orientation="landscape" fullscreen="true" width="0" height="0" />
	
	<!-- ============== -->

	<source path="Source" />
	<assets path="Assets" rename="assets" embed="false" />

	<!-- ============== -->
	
	<haxelib name="openfl" />
	<haxelib name="starling" />

	<!-- <haxelib name="hxcpp-debug-server" /> -->

	<!-- ============== -->

	<architecture name="armv7" exclude="arm64" if="android" />
	
	
</project>